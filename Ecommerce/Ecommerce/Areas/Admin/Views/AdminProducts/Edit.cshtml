@model Ecommerce.Entities.Product

@{
    ViewData["Title"] = "Chỉnh Sửa Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section Styles{
    <link href="~/adminassets/summernote/summernote-bs4.css" rel="stylesheet" />
    <link href="~/adminassets/summernote/summernote.css" rel="stylesheet" />
}
<form asp-action="edit" asp-controller="adminproducts" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductID" />
    <input type="hidden" asp-for="Thumb" />
    <input type="hidden" asp-for="DateCreated" />
    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="media align-items-center m-b-15">
                <div class="avatar avatar-image rounded" style="height: 70px; width: 70px">
                    <img src="assets/images/others/thumb-16.jpg" alt="">
                </div>
                <div class="m-l-15">
                    <h4 class="m-b-0">Skinny Men Blazer</h4>
                    <p class="text-muted m-b-0">Code: #5325</p>
                </div>
            </div>
            <div class="m-b-15">
                <button class="btn btn-primary">
                    <i class="anticon anticon-save"></i>
                    <span>Save</span>
                </button>
            </div>
        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Basic Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-option">Option Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-description">Description</a>
            </li>
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Tên Sản Phẩm</label>
                        <input type="text" class="form-control" asp-for="ProductName">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Mô tả ngắn</label>
                        <input type="text" class="form-control" asp-for="ShortDescription">
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label class="font-weight-semibold" for="productPrice">Giá</label>
                            <input type="text" class="form-control" asp-for="Price">
                        </div>
                        <div class="form-group col-6">
                            <label class="font-weight-semibold" for="Discount">Discount</label>
                            <input type="text" class="form-control" asp-for="Discount">
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productCategory">Danh Mục Sản Phẩm</label>
                            <select class="custom-select" asp-for="CateId" style="min-width:200px" asp-items="ViewBag.DanhMuc"></select>

                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productCategory">Số Lượng Trong Kho</label>
                            <input type="text" class="form-control" asp-for="UnitsInStock" style="min-width:200px">

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="font-weight-semibold" for="productBrand">Ảnh Đại Diện</label>
                        <input name="fthumb" type="file" class="form-control-file" asp-for="Thumb" />
                        <span asp-validation-for="Thumb" style="min-width:200px"></span>

                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productStatus">Status</label>
                        <div class="form-group d-flex align-items-center">
                            <div class="switch m-r-10">
                                <input type="checkbox" asp-for="Active" checked="">
                                <label for="Active"></label>
                            </div>
                            <label>Public</label>
                        </div>
                        <div class="form-group d-flex align-items-center">
                            <div class="switch m-r-10">
                                <input type="checkbox" asp-for="HomeFlag" checked="">
                                <label for="HomeFlag"></label>
                            </div>
                            <label>HomeFlag</label>
                        </div>
                        <div class="form-group d-flex align-items-center">
                            <div class="switch m-r-10">
                                <input type="checkbox" asp-for="BestSellers" checked="">
                                <label for="BestSellers"></label>
                            </div>
                            <label>Best Sellers</label>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-option">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productSize">Title</label>
                        <input type="text" asp-for="Title" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productSize">Meta Description</label>
                        <input type="text" asp-for="MetaDesc" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productSize">Meta Key</label>
                        <input type="text" asp-for="MetaKey" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="Tags">Tags</label>
                        <input type="text" asp-for="Tags" class="form-control" />
                    </div>

                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-description">
            <div class="card">
                <div class="card-body">
                    <label class="font-weight-semibold" for="Description">Mô Tả</label>
                    <textarea  id="summernote" asp-for="Description"></textarea>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <!-- page js -->
    <script src="/adminassets/vendors/select2/select2.min.js"></script>
    <script src="/adminassets/vendors/quill/quill.min.js"></script>
    <script src="/adminassets/js/pages/e-commerce-product-edit.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
    <script src="~/adminassets/summernote/summernote-bs4.js"></script>
    <script src="~/adminassets/summernote/summernote.js"></script>
    <script>
        $(document).ready(function () {
            $('#summernote').summernote({
                fontNames: ['Arial', 'Arial Black', 'Comic San MS', 'Couries New'],
                styleTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5', 'h6'],
                height: 200,
                minHeight: null,
                maxHeight: null,
                focus: true
            });
        });
    </script>


}